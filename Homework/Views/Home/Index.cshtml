@model IEnumerable<Homework.Models.CityModel>

@{
    ViewBag.Title = "Forecast weather";
}

<div>
    @using (Ajax.BeginForm("Weather", "Home", new AjaxOptions { UpdateTargetId = "forecast-weather", HttpMethod = "Post" }, new { @class = "flexbox" }))
    {
        <div>
            <input list="cities" type="text" value="Search city" name="city" class="form-control input-sm search" onclick="this.value = ''" />
            <datalist id="cities">
                @foreach (var item in Model)
                {
                    <option value="@item.Name" />
                }
            </datalist>
        </div>
        <div>
            @Html.Label("Count days:")
            @Html.DropDownList("countDays", new SelectList(new int[] { 1, 3, 7 }), new { @class = "form-contol search" })
        </div>

        <input type="submit" value="Search" class="btn btn-default search" />
    }
</div>
<br />
<div id="forecast-weather"></div>

