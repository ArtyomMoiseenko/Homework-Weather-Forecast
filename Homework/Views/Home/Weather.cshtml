@model Homework.Models.WeatherModel

<div id="all flexbox">
    <div class="detail-weather-temperature">
        <h2>@Model.City.Name, @Model.City.Country</h2>
        <img src="@Model.List.FirstOrDefault().Weather.FirstOrDefault().Icon" /><h3 class="text-right" id="inline">@(Math.Round(Model.List.FirstOrDefault().Temp.Day))&#8451;</h3>
        <h5>GPS (@Model.City.Coord.Lat; @Model.City.Coord.Lon)</h5>
        <h5>Now - @DateTime.Now, @DateTime.Now.DayOfWeek</h5>
    </div>
    <table class="details">
        <tr>
            <th>Date</th>
            <th>Morning temperature</th>
            <th>Afternoon temperature</th>
            <th>Evening temperature</th>
            <th>Night temperature</th>
            <th>Weather</th>
            <th>Atmosthheric thressure</th>
            <th>Humidity</th>
            <th>Wind stheed</th>
            <th>Cloudiness</th>
        </tr>
        @{int i = 0; }
        @foreach (var item in Model.List)
        {
            <tr>
                <td>@ViewBag.Date[i].ToShortDateString()</td>
                <td>@item.Temp.Morn&#8451;</td>
                <td>@item.Temp.Day&#8451;</td>
                <td>@item.Temp.Eve&#8451;</td>
                <td>@item.Temp.Night&#8451;</td>
                <td>@item.Weather.FirstOrDefault().Description</td>
                <td>@item.Pressure hPa</td>
                <td>@item.Humidity %</td>
                <td>@item.Speed m/s</td>
                <td>@item.Clouds %</td>
            </tr>
            i++;
        }
    </table>
</div>
